<androidx.cardview.widget.CardView android:id="@+id/cv_account"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp"
    app:cardMaxElevation="6dp"
    app:cardUseCompatPadding="true"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/tv_title_account_menu"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:paddingVertical="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/btn_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginStart="22dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="4dp"
            android:drawablePadding="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="@string/location"
            app:drawableEndCompat="@drawable/ic_next"
            app:drawableStartCompat="@drawable/ic_location_turquoise" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/btn_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="16dp"
            android:drawablePadding="16dp"
            android:paddingTop="8dp"
            android:textColor="@color/dark_gray"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/history"
            app:drawableEndCompat="@drawable/ic_next"
            app:drawableStartCompat="@drawable/ic_history" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/btn_leaderboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="16dp"
            android:drawablePadding="16dp"
            android:paddingTop="8dp"
            android:textColor="@color/dark_gray"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/history"
            app:drawableEndCompat="@drawable/ic_next"
            app:drawableStartCompat="@drawable/ic_leaderboard" />
    </LinearLayout>

</androidx.cardview.widget.CardView>