<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_popular_menu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ProgressBar
        android:id="@+id/progress_popular"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="@id/rv_popular_menu"
        app:layout_constraintTop_toTopOf="@id/rv_popular_menu"
        app:layout_constraintBottom_toBottomOf="@id/rv_popular_menu"
        app:layout_constraintEnd_toEndOf="@id/rv_popular_menu"/>

    <TextView
        android:id="@+id/tv_error_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="28dp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_semibold"
        app:layout_constraintStart_toStartOf="@id/rv_popular_menu"
        app:layout_constraintTop_toTopOf="@id/rv_popular_menu"
        app:layout_constraintBottom_toBottomOf="@id/rv_popular_menu"
        app:layout_constraintEnd_toEndOf="@id/rv_popular_menu"/>

</androidx.constraintlayout.widget.ConstraintLayout>