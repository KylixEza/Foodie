<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.oreyo.foodie">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Foodie"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Foodie">
        <activity
            android:name=".presentation.profile.wallet.DetailWalletActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.profile.wallet.TopUpActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.profile.wallet.FoodieWalletActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.profile.history.HistoryActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.profile.edit_profile.EditProfileActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.profile.address.AddressActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.profile.leaderboard.LeaderboardActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.note.detail.NoteDetailActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.note.verification.NoteVerificationActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.challenge.detail.ChallengeDetailActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.detail.DetailActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.voucher.detail.DetailVoucherActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.notification.NotificationActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.category.CategoryActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.favorite.FavoriteActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.splash.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.auth.AuthActivity"
            android:exported="true" />
        <activity
            android:name=".presentation.MainActivity"
            android:exported="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>